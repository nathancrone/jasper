@model Jasper.Models.RegisterViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row">

    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-validate", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { })
        <div class="row">
            <div class="medium-2 columns">
                @Html.LabelFor(m => m.Email, new { @class = "text-right middle" })
            </div>
            <div class="medium-10 columns">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="medium-2 columns">
                @Html.LabelFor(m => m.Password, new { @class = "text-right middle" })
            </div>
            <div class="medium-10 columns">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="medium-2 columns">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-right middle" })
            </div>
            <div class="medium-10 columns">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <label class="medium-2 columns">
                Select User Role
            </label>
            <div class="medium-10 columns">
                @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                    <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </div>
        </div>
        <div class="row">
            <div class="medium-offset-2 medium-10 columns">
                <input type="submit" class="button" value="Create" />
            </div>
        </div>
    }
</div>

@section scripts {
    @Html.JSMinify("~/assets/js/useradmin-create-bundle")
}
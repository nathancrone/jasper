@model IEnumerable<Jasper.Models.NotificationTag>

@{
    ViewBag.Title = "Index";
}

<div class="row">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Back to Apps", "AppIndex") |
        @Html.ActionLink("Create New", "TagCreate")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.App.AppName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagLabel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagValue)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.App.AppName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TagLabel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TagValue)
                </td>
                <td>
                    @Html.ActionLink("Edit", "TagEdit", new { id = item.TagId }) |
                    @Html.ActionLink("Details", "TagDetails", new { id = item.TagId }) |
                    @Html.ActionLink("Delete", "TagDelete", new { id = item.TagId })
                </td>
            </tr>
        }

    </table>


</div>
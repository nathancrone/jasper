@model Jasper.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<div class="row">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-validate", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>Send verification code</h4>
            <hr />
            <div class="row">
                <div class="medium-4 columns">
                    @Html.LabelFor(m => m.SelectedProvider, new { @class = "text-right middle" }):
                </div>
                <div class="medium-8 columns">
                    @Html.DropDownListFor(m => m.SelectedProvider, Model.Providers)
                    <input type="submit" value="Submit" class="button" />
                </div>
            </div>
    }
</div>

@section scripts {
    @Html.JSMinify("~/assets/js/account-sendcode-bundle")
}
@model Jasper.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-validate", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Reset your password.</h4>
            <hr />
            @Html.ValidationSummary("", new { })
            @Html.HiddenFor(model => model.Code)
            <div class="row">
                <div class="medium-2 columns">
                    @Html.LabelFor(m => m.Email, new { @class = "text-right middle" })
                </div>

                <div class="medium-10 columns">
                    @Html.TextBoxFor(m => m.Email, new { })
                </div>
            </div>
            <div class="row">
                <div class="medium-2 columns">
                    @Html.LabelFor(m => m.Password, new { @class = "text-right middle" })
                </div>
                <div class="medium-10 columns">
                    @Html.PasswordFor(m => m.Password, new { })
                </div>
            </div>
            <div class="row">
                <div class="medium-2 columns">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-right middle" })
                </div>
                <div class="medium-10 columns">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { })
                </div>
            </div>
            <div class="row">
                <div class="medium-offset-2 medium-10 columns">
                    <input type="submit" class="button" value="Reset" />
                </div>
            </div>
    }
</div>

@section scripts {
    @Html.JSMinify("~/assets/js/account-resetpassword-bundle")
}